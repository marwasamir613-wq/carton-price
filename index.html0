<!DOCTYPE html>
<html lang="ar">
<head>
<meta charset="UTF-8">
<title>حاسب سعر الكرتونة</title>

<style>
body {
  font-family: Arial, sans-serif;
  background: #f2f2f2;
  padding: 20px;
}

.container {
  max-width: 420px;
  margin: auto;
  background: #ffffff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 0 12px rgba(0,0,0,0.1);
}

h1, h2 {
  text-align: center;
  margin: 5px 0;
}

label {
  display: block;
  margin-top: 12px;
  font-weight: bold;
}

input {
  width: 100%;
  padding: 10px;
  margin-top: 6px;
  border-radius: 6px;
  border: 1px solid #ccc;
  font-size: 16px;
}

/* مستطيل السعر */
.price-box {
  margin-top: 25px;
  padding: 15px;
  background: #1e90ff;
  color: white;
  text-align: center;
  font-size: 26px;
  font-weight: bold;
  border-radius: 8px;
}
</style>
</head>

<body>

<div class="container">
  <h1>أ / طارق</h1>
  <h2>حاسب سعر الكرتونة</h2>

  <label>الطول (سم)</label>
  <input type="number" id="length" value="5" oninput="calculate()">

  <label>العرض (سم)</label>
  <input type="number" id="width" value="5" oninput="calculate()">

  <label>الارتفاع (سم)</label>
  <input type="number" id="height" value="5" oninput="calculate()">

  <div class="price-box" id="result">
    السعر: 5.50 جنيه
  </div>
</div>

<script>
function calculate() {
  var l = Number(document.getElementById("length").value);
  var w = Number(document.getElementById("width").value);
  var h = Number(document.getElementById("height").value);

  if (!l || !w || !h) {
    document.getElementById("result").innerHTML = "ادخل المقاسات";
    return;
  }

  // المعادلة المطلوبة
  var price = l * w * h * 0.044;

  document.getElementById("result").innerHTML =
    "السعر: " + price.toFixed(2) + " جنيه";
}
</script>

</body>
</html>
